[colors]
;background = ${xrdb:color0:#222}
background = #181818
background-alt = #282828
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #806728
secondary = #e60053
alert = #bd2c40

[bar/mybar]
monitor = ${env:MONITOR:eDP}
monitor-fallback = eDP
width = 100%
height = 20
;offset-x = 0%
;offset-y = 0%
radius = 0.0
fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0


module-margin-left = 1
module-margin-right = 1

font-0 = "JetBrains Mono:size=8;0"
font-1 = "Font Awesome 5 Free:size=10;0"
font-2 = "Font Awesome 5 Free Solid:size=10;0"
font-3 = "Font Awesome 5 Brand :size=10;0"


modules-left = bspwm
modules-center = xwindow
modules-right = pulseaudio temperature memory battery date

tray-position = right
tray-background = ${colors.background}
tray-padding = 3
tray-offset-y = 0

wm-restack = bspwm


override-redirect = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = 
